{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "mvn spring-boot:run -Dspring-boot.run.jvmArguments=\"-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8000\" -Pboot",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mvn clean install -Dmaven.test.skip=true",
            "group": "build"
        },
        {
            "label": "debug test",
            "type": "shell",
            "command": "mvnDebug test -DforkMode=never",
            "group": "test"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn test",
            "group": "test"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "mvn spring-boot:run -Pboot",
            "group": "build"
        },
    ]
}